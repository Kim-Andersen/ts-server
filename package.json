{
  "name": "ts-server",
  "version": "1.0.0",
  "author": "Kim Andersen",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "start-runtime": "npm run pm2-runtime start pm2/pm2.production.config.json",
    "build": "npm run build-sass && npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist/server/start.js",
    "watch-node": "nodemon dist/server/start.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-build": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\"",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "npm run tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node ./scripts/copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server/start.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "tsc": "tsc",
    "pm2-runtime": "pm2-runtime",
    "pm2": "pm2",
    "db-migrate": "knex migrate:latest",
    "db-seed": "knex seed:run",
    "nc-deploy": "nc deploy -i ts-server -cmd start-runtime",
    "nc-deploy-rebuild": "nc deploy -i ts-server -cmd start-runtime --rebuild"
  },
  "dependencies": {
    "@sendgrid/mail": "6.3.1",
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "3.5.1",
    "body-parser": "1.18.3",
    "bookshelf": "0.13.3",
    "compression": "1.7.3",
    "connect-redis": "3.3.3",
    "dotenv": "6.0.0",
    "errorhandler": "1.5.0",
    "express": "4.16.0",
    "express-flash": "0.0.2",
    "express-session": "1.15.6",
    "express-validator": "5.3.0",
    "knex": "0.15.2",
    "kue": "0.11.6",
    "lodash": "4.17.10",
    "lusca": "1.6.1",
    "moment": "2.22.2",
    "node-sass": "4.9.3",
    "pg": "7.4.3",
    "pm2": "3.0.3",
    "pug": "2.0.3",
    "typescript": "3.0.1",
    "winston": "3.0.0"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.23",
    "@types/body-parser": "1.17.0",
    "@types/bookshelf": "0.9.9",
    "@types/compression": "0.0.36",
    "@types/connect-redis": "0.0.7",
    "@types/dotenv": "4.0.3",
    "@types/errorhandler": "0.0.32",
    "@types/express": "4.16.0",
    "@types/express-flash": "0.0.0",
    "@types/express-session": "1.15.10",
    "@types/jest": "23.3.1",
    "@types/knex": "0.14.20",
    "@types/kue": "0.11.9",
    "@types/lodash": "4.14.116",
    "@types/lusca": "1.5.0",
    "@types/moment": "2.13.0",
    "@types/node": "10.5.7",
    "@types/shelljs": "0.8.0",
    "@types/supertest": "2.0.5",
    "@types/winston": "2.3.9",
    "chai": "4.1.2",
    "concurrently": "3.6.1",
    "jest": "23.4.2",
    "nodemon": "1.18.3",
    "shelljs": "0.8.2",
    "supertest": "3.1.0",
    "ts-jest": "23.1.3",
    "ts-node": "7.0.0",
    "tslint": "5.11.0"
  }
}
