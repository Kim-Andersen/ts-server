{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["../node_modules/*", "types/*"]
      // "@server/*": ["server/*"]
      // "@server/util/*": ["server/util/*"],
      // "@server/business/*": ["server/business/*"]
      // "@shared/*": ["src/shared/*"],
      // "@client/*": ["src/client/*"]
    },
    "rootDir": "./src",
    "pretty": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "jsx": "react",
    "lib": ["esnext.asynciterable", "dom", "es2015"],
    "experimentalDecorators": true
  },
  // "include": ["src/**/*"]
  "include": ["src/server/**/*", "src/shared/**/*"],
  "exclude": ["src/client/**/*"]
}
