{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["../node_modules/*", "types/*"]
      // "@server/*": ["server/*"]
      // "@server/util/*": ["server/util/*"],
      // "@server/business/*": ["server/business/*"]
      // "@shared/*": ["src/shared/*"],
      // "@client/*": ["src/client/*"]
    },
    "rootDir": "./src",
    "pretty": true,
    "strict": true
  },
  "include": ["src/**/*"]
}
